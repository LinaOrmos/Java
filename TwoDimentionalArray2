//This is another example of two dimentional arrays
public class TDA{
public static void main(String[] args){

int TD[][] = new int [4][];
TD[0] = new int[1];
TD[1] = new int[2];
TD[2] = new int[3];
TD[3] = new int[4];

int i,j,k=0;
for(i=0;i<4;i++)
{
for(j=0;j<i+1;j++)
{
TD[i][j]  k;
k++;

}
}
for(i=0;i<4;i++)
{
System.out.println(TD[i][j]+ " ");
}
System.out.println();

}

}
